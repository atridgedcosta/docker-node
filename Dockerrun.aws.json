{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "node-app",
      "host": {
        "sourcePath": "/var/app/current"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "node-app",
      "image": "node:latest",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 3000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "node-app",
          "containerPath": "/var/app"
        }
      ]
    }
  ]
}